{
	"linux": {
		"prebuild": [
			"rm -r ./test/util",
			"cp -r ./source ./test/util"
		],
		"compiler": "clang",
		"folders": ["test"],
		"includes": ["test"],
		"links": ["m", "pthread", "SDL2"],
		"defines": ["DG_NO_LUA"],
		"output": "melon-test-linux-native"
	},
	"windows-clang": {
		"prebuild": [
			"rd test\\util /s /q",
			"xcopy .\\source test\\util /e /i"
		],
		"compiler": "clang",
		"folders": ["test"],
		"includes": ["test"],
		"links": ["user32", "gdi32", "Ws2_32", "bcrypt"],
		"defines": ["DG_NO_LUA", "DG_NO_SDL", "DG_USE_WINDOWS_API", "MELON_CRYPTOGRAPHY_RANDOM"],
		"output": "melon-test-windows"
	}
}
